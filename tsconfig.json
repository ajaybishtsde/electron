{
    "compileOnSave": false,
    "compilerOptions": {        
        "noEmit": true,
        "pretty": true,
        "jsx": "preserve",
        "target": "es2016",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",        
        "baseUrl": "src",        
        "sourceMap": true,
        "skipLibCheck": true,
        "importHelpers": true,        
        "allowUnreachableCode": true,
        "noImplicitUseStrict": true,
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "forceConsistentCasingInFileNames": true,        
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "paths": {
            "@log": ["log"],
            "@modules/*": ["modules/*"]
        } 
    },    
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.d.ts",
        "package.json"
    ]     
}